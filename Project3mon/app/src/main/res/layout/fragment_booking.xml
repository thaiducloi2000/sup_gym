<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HomeMenuActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center_horizontal"
            android:text="Danh Sach HLV"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/green"/>


    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:paddingTop="80dp"
        android:orientation="horizontal"
        android:onClick="clickToTrainer1">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/trainer2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameTrainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phung Cong Danh"
                android:textColor="@color/gray"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/ageTrainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="18"
                android:textSize="20dp"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:paddingTop="200dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/trainer3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTrainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duong Kim Long"
                android:textColor="@color/gray"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ageTrainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="18"
                android:textSize="20dp"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:paddingTop="320dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/trainer1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTrainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Le Trong Thang"
                android:textColor="@color/gray"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ageTrainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="18"
                android:textSize="20dp"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="654dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:paddingTop="440dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/trainer4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTrainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thai Duc Loi"
                android:textColor="@color/gray"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ageTrainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="18"
                android:textColor="@color/gray"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>




</FrameLayout>